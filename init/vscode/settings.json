{
    "editor.find.seedSearchStringFromSelection": "never",
    "editor.formatOnPaste": true,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.scrollBeyondLastLine": false,
    "editor.tabCompletion": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/.hg": false,
        "**/CVS": false,
        "**/.DS_Store": false
    },
    "git.autofetch": false,
    "git.countBadge": "off",
    "javascript.validate.enable": false,
    "search.exclude": {
        "**/node_modules": false,
        "**/bower_components": false
    },
    "security.workspace.trust.untrustedFiles": "open",
    "typescript.locale": "en",
    "typescript.updateImportsOnFileMove.enabled": "never",
    "workbench.colorTheme": "Twilight",
    "workbench.colorCustomizations": {
        "statusBar.background": "#7587A6",
        "statusBar.noFolderBackground": "#9B859D",
        "statusBar.debuggingBackground": "#CF6A4C"
    },
    "workbench.editor.closeOnFileDelete": false,
    "workbench.startupEditor": "none",
    "workbench.tips.enabled": false,
    "[markdown]": {
        "editor.fontFamily": "Ricty Diminished, Menlo, Monaco, 'Courier New', monospace"
    },
    "markdown-pdf.styles": [
        "~/.config/Code/User/github-markdown.min.css"
    ],
    "markdown-pdf.displayHeaderFooter": false,
    "markdown-pdf.includeDefaultStyles": false,
    "markdown-pdf.scale": 0.8
}
